<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutDetail"
    tools:context=".view.DetailActivity">

    <TextView
        android:id="@+id/detail"
        android:text="DETAIL"
        android:textSize="32sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/logoDetail"
        android:layout_below="@+id/detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"/>
    <TextView
        android:hint="Detail Judul"
        android:id="@+id/titleDetailFilm"
        android:layout_below="@id/logoDetail"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:hint="Detail Film"
        android:id="@+id/detailRelease"
        android:layout_below="@id/titleDetailFilm"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:hint="Detail Film"
        android:id="@+id/descDetail"
        android:layout_below="@id/detailRelease"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"/>

</RelativeLayout>